<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s"
    tools:context="com.project.p.warehousefp.MainActivity">

    <Button
        android:id="@+id/angry_btn"

        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/buttonshape"
        android:drawableBottom="@mipmap/ic_add"
        android:shadowColor="#A8A8A8"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="50"
        android:text="add"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="115dp" />

    <Button
        android:id="@+id/btn_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/angry_btn"
        android:layout_marginEnd="48dp"
        android:background="@drawable/buttonshape"
        android:text="Edit" />

    <Button
        android:id="@+id/btn_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/angry_btn"
        android:layout_below="@+id/angry_btn"
        android:layout_marginTop="51dp"
        android:background="@drawable/buttonshape"
        android:text="View" />

    <Button
        android:id="@+id/btn_Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_Edit"
        android:layout_alignTop="@+id/btn_View"
        android:background="@drawable/buttonshape"
        android:text="Search" />

    <Button
        android:id="@+id/btn_Setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_View"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonshape"
        android:text="Feedback" />

</RelativeLayout>
